menu "Example Configuration"

    config EXAMPLE_SCAN_LIST_SIZE
        int "Max size of scan list"
        range 0 20
        default 10
        help
            The size of array that will be used to retrieve the list of access points.

    config EXAMPLE_WIFI_SSID
        string "WiFi Access Point SSID"
        default "test"
        help
            Set WiFi AP SSID.

    config EXAMPLE_WIFI_PASS
        string "WiFi Access Point password"
        default "test"
        help
            Set WiFi AP password.

    config EXAMPLE_BROKER_URL
        string "Broker URL"
        default "mqtt://192.168.88.254"
        help
            URL of the MQTT broker to connect to

    config EXAMPLE_GPIO_INPUT
        int "GPIO input pin"
        range 0 10
        default 9
        help
            GPIO pin number to be used as GPIO_INPUT_IO.

endmenu
